.fashion-header
	background-image url('../../images/bg.png')
	height 813px
	background-size cover

.fashion-logo
	&__title
		display block
		margin-top 225px
		text-align center
		font-size 60px
		font-family $font-family-serif
		font-weight 100
		letter-spacing 0.04em

.fashion-image
	cursor pointer
	margin 0 auto
	margin-top 51px
	height 59px
	width 59px
	background-image url('../../images/play.png')
	background-size cover

.fashion-button
		width 190px
		height 50px	
		margin 0 auto	
		margin-top 39px
	button
		font-family $font-family-serif
		font-weight 400
		color #ffffff
		font-size 16px
		width 100%
		height 100%
		border none
		border-radius 4px
		background-color #ff6d6d


.fashion-try
	&__title
		font-family $font-family-serif
		font-weight 400
		font-size 14px
		text-align center
		display block
		margin-top 19px
		color #282828
		opacity .6
		